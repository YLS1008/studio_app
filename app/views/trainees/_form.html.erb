<div class="basic-container">
    <div class="col"></div>
    <div class="col-10">
        <h2>רישום מתאמנ/ת חדש/ה</h2><br>
        <%= bootstrap_form_with(model: trainee, local: true, layout: :horizontal ) do |f| %>

            <% if trainee.errors.any? %>
                <div id="error_explanation">
                    <h2>
                        <%= pluralize(trainee.errors.count, "error" ) %> prohibited this trainee from being saved:
                    </h2>

                    <ul>
                        <% trainee.errors.each do |error| %>
                            <li>
                                <%= error.full_message %>
                            </li>
                            <% end %>
                    </ul>
                </div>
                <% end %>

                    <%= f.email_field :email, label: "אימייל" , autofocus: true, required: true %><br>
                        <%= f.text_field :first, label: "שם פרטי" , required: true %><br>
                            <%= f.text_field :last, label: "שם משפחה" , required: true %><br>
                                <%= f.telephone_field :phone, label: "מספר טלפון" , required: true %><br>
                                    <%= f.date_field :birthday, label: "תאריך לידה" %><br>
                                        <div class="row">
                                            <div>
                                                <%= f.submit "רישום" , class: "btn btn-primary btn-lg" %><br>
                                            </div>
                                            <br />
                                        </div>
                                        <% end %>



    </div>
    <div class="col"></div>
</div>