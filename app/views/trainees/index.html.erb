<div class="basic-container">
    <h1>מתאמנים</h1>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <div class="table-responsive" id="tableB">
                    <table class="table table-hover table-bordered" id="searchableB" style="background-color: white;">
                        <thead class="thead-dark">
                            <tr>
                                <th class="text-center">שם מלא</th>
                                <th class="text-center">דואר אלקטרוני</th>
                                <th class="text-center">טלפון</th>
                                <th class="text-center">תחומי עניין</th>
                                <th class="text-center">פעולות</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% @trainees.each do |trainee| %>
                                <tr>
                                    <td>
                                        <%= trainee.full_name %>
                                    </td>
                                    <td>
                                        <%= trainee.email %>
                                    </td>
                                    <td>
                                        <%= link_to trainee.phone, "https://wa.me/#{trainee.get_international_number}" ,
                                            target: :_blank %>
                                    </td>
                                    <td>
                                        <div>
                                            <div class="btn-group">
                                                <button type="button"
                                                    class="btn btn-primary btn-m sqs-block-button-element dropdown-toggle"
                                                    data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="fas fa-plus"></i>
                                                    פעולות
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <%= link_to 'פרופיל' , trainee,
                                                            class: "btn btn-primary btn-m sqs-block-button-element" %>
                                                    </li>
                                                    <li>
                                                        <%= link_to 'ערוך' , edit_trainee_path(id: trainee.id),
                                                            class: "btn btn-primary btn-m sqs-block-button-element" %>
                                                    </li>
                                                    <li>
                                                        <%= link_to 'הקפא מתאמן' , freeze_trainee_path(id: trainee.id),
                                                            class: "btn btn-primary btn-m sqs-block-button-element" %>
                                                    </li>
                                                </ul>
                                            </div>
                                            <button class="btn btn-primary dropdown-toggle" type="button"
                                                id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                                                aria-expanded="false">
                                                סיכום שיעורים
                                            </button>
                                            <ul class="dropdown-menu no-bullets" style="background-color: info;">
                                                <% trainee.enroll_count.each do |name, count| %>
                                                    <li>
                                                        <%= name %> | <%= count %>
                                                    </li>
                                                    <% end %>
                                            </ul>
                                        </div>

                                    </td>
                                    <td>

                                    </td>

                                </tr>
                                <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>