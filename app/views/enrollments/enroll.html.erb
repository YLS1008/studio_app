<div class="row">
    <div class="basic-container">
        <div class="enroll-select" style="margin-bottom: 30px; background-color: black">

              <%= bootstrap_form_tag(url: finalize_path, local: true) do |f| %>
            <%= f.collection_select :trainee_ids, @trainees, :id, :full_name, { class: 'select2' },
                                    label: "בחר מתאמנים לרישום", id: "select-trainees", multiple: true %>

        </div>
    </div>
</div>

<div class="row">
<div class="basic-container">

    <%= render 'layouts/calendar', activities: @time_slots,
         week_number: 1, show_toggle_button: true,
          date_begin: Date.today.beginning_of_week, show_date: true, form: f %>
</div>
</div>
<% end %>