<div class="basic-container first-container">
    <div class="buttons">
        <%= submit_tag "פניות חדשות", :type => 'button', :id => "switchA" %>
        <%= submit_tag "מתאמנים", :type => 'button', :id => "switchB" %>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive" id="tableA" style="direction: rtl; display:none;">
                <table class="table table-hover table-bordered" style="background-color: white;">
                    <thead class="thead-dark">
                        <tr>
                            <th class="text-center">שם פרטי</th>
                            <th class="text-center">שם משפחה</th>
                            <th class="text-center">דואר אלקטרוני</th>
                            <th class="text-center">מספר טלפון</th>
                            <th class="text-center">תחומי עניין</th>
                            <th colspan="2"></th>
                        </tr>
                    </thead>

                    <tbody>
                        <% @contacts.each do |contact| %>
                        <tr>
                            <td><%= contact.first %></td>
                            <td><%= contact.last %></td>
                            <td><%= contact.email %></td>
                            <td><%= contact.phone %></td>
                            <td><%= contact.interests %></td>
                            <td><%= link_to 'רישום למערכת', convert_path(id: contact.id) %></td>
                            <td><%= link_to 'מחיקה', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>

                <br>

                <%= link_to 'New Contact', new_contact_path %>

            </div>
            <div class="table-responsive" id="tableB" style="direction: rtl;">
                <table class="table table-hover table-bordered" id="searchableB" style="background-color: white;">
                    <thead class="thead-dark">
                        <tr>
                            <th class="text-center">שם פרטי</th>
                            <th class="text-center">שם משפחה</th>
                            <th class="text-center">דואר אלקטרוני</th>
                            <th class="text-center">טלפון</th>
                            <th class="text-center">משימות</th>

                        </tr>
                    </thead>

                    <tbody>
                        <% @trainees.each do |trainee| %>
                        <tr>
                            <td><%= trainee.first %></td>
                            <td><%= trainee.last %></td>
                            <td><%= trainee.email %><span style="float: left;"> | <%= link_to "פרופיל", trainee, class: 'btn btn-main' %>
                                    | <%= link_to "רישום", enroll_path(id: trainee.id), class: 'btn btn-main'  %> | <%= link_to "יומן שיחות", conversation_path(id: trainee.id), class: 'btn btn-main'  %> </span></td>
                            <td><%= link_to trainee.phone, "https://wa.me/#{trainee.get_international_number}", target: :_blank  %></td>
                            <td>
                                <% if trainee.open_tasks.empty? %>
                                <%= link_to "צור משימה", conversation_path(id: trainee.id), class: 'btn btn-main' %>
                                <% else %>
                                <div>
                                    <button class="btn btn-main dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <span>משימות פתוחות</span>
                                    </button>
                                    <ul class="dropdown-menu no-bullets" style="background-color: info;">
                                        <% trainee.open_tasks.each do |task| %>
                                        <li>
                                            <%= task.content %> | <%= task.due_date.to_date.strftime("%d/%m/%y") %> | <br>
                                            <%= bootstrap_form_for(task, url: update_status_path, local: true) do |f| %>
                                            <%= f.hidden_field :id, value: task.id %>
                                            <%= f.hidden_field :trainee_id, value: trainee.id %>
                                            <%= f.submit "סגירת משימה", class: "btn btn-main btn-sm" %>
                                            <% end %>
                                        </li>
                                        <% end %>
                                    </ul>
                                </div>
                                <% end %>
            </div>
            </td>
            </td>
            </tr>
            <% end %>
            </tbody>
            </table>

            <br>

            <%= link_to 'New Trainee', new_trainee_path %>
        </div>
    </div>
</div>
</div>


<div class="basic-container">
    <h1>
        השבוע הקרוב
    </h1>
</div>
<div id="events_calendar">
    <%= render 'layouts/admin_calendar', activities: @activities, tasks: @open_tasks, week_number: 1,
         date_begin: Date.today.beginning_of_week, show_toggle_button: true, show_date: true %>
</div>