<%= content_for(:after_js) do %>
<script>
    $(document).ready(function() {
        $('.owl-carousel').owlCarousel({
            stagePadding: 50,
            loop: true,
            margin: 10,
            responsive: {
                0: {
                    items: 1
                },
                600: {
                    items: 3
                }
            }
        });
    });
</script>

<% end %>



<%= render 'layouts/responsive_header' %>

<%= image_tag 'biglogo.jpg', class: 'img-fluid' %>

<div class="center jumbotron" , style="background-color:#77E8F4; padding-top:100px;">
    <div class="container rounded p-3 my-3 bg-info ">
        <%= render 'layouts/about' %>
    </div>
</div>

<div class="center jumbotron" , style="background-color:#77E8F4">
    <h1>
        Our Instructors
    </h1>

    <div class="owl-carousel">
        <% Dir.glob('app/assets/images/profile/*').map do |path| %>
        <%= image_tag "profile/#{ File.basename(path) }" %>
        <% end.reduce(&:+) %>
    </div>
</div>

<div class="center jumbotron" , style="background-color:#77E8F4">
    <%= week_calendar(events: @activities, number_of_weeks: 2) do |date, activities| %>
    <%= date %>

    <% activities.each do |activity| %>
    <div class="card" style="width: 12rem;">
        <% back_color = "#{activity.mother.instructor.color}" %>
        <% back_color = "white" if back_color == "" %>

        <div class="card-body" style="background-color: <%= back_color %>">
            <h4 class="card-title"><%= activity.mother.name %></h4>
            <h5 class="card-subtitle mb-2 text-muted"><%= link_to activity.mother.instructor.first.capitalize + ' ' + activity.mother.instructor.last.capitalize,
                                                                     activity.mother.instructor %></h5>
            <h5>Starts at: <%= activity.start_time.to_s(:time) %> </h5>
        </div>
    </div>

    <% end %>
    <% end %>
</div>