        <div class="basic-container">
            <h1>
                צוות המדריכים
            </h1>

            <div class="owl-carousel">
                <% @all_instructors.each do |instructor| %>
                <div class="card" style="width: 18rem; ">
                    <%= link_to image_tag(instructor.displayed_image, :class => "card-img-top", :style => "border-radius: 10%;" ), instructor%>
                    <div class="card-body">
                        <p class="card-text" , style="text-align: center;"><strong><%= instructor.first  + ' ' +  instructor.last %></strong></p>
                    </div>
                </div>
                <% end %>
            </div>
