<%= content_for(:after_js) do %>
<script>
    $(document).ready(function() {
        $('.owl-carousel').owlCarousel({
            navigation: true,
            paginationSpeed: 1000,
            goToFirstSpeed: 2000,
            singleItem: true,
            autoheight: true,
            transitionStyle: "fade",
            loop: true
        });
    });
</script>
<% end %>

