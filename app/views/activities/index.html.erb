<p id="notice"><%= notice %></p>

<h1>Activities</h1>

<table>
    <thead>
        <tr>
            <th>Instructor</th>
            <th>Name</th>
            <th>Duration</th>
            <th>Start time</th>
            <th>End time</th>
            <th>Capacity</th>
            <th>Reccuring</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @activities.each do |activity| %>
        <tr>
            <td><%= activity.instructor_id %></td>
            <td><%= activity.name %></td>
            <td><%= activity.duration %></td>
            <td><%= activity.start_time %></td>
            <td><%= activity.end_time %></td>
            <td><%= activity.capacity %></td>
            <td><%= activity.reccuring %></td>
            <td><%= link_to 'Show', activity %></td>
            <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
            <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= render 'layouts/calendar', activities = @activities %>

<%= link_to 'New Activity', new_activity_path %>