<div class="basic-container first-container">
    <div class="table-responsive" style="direction: rtl;">
        <table class="table table-hover table-bordered" id="searchableB" style="background-color: white;">
            <thead class="thead-dark">
                <tr>
                    <th class="text-center">קבוצה</th>
                    <th class="text-center">רשומים</th>
                    <th class="text-center">פעולות </th>
                </tr>
            </thead>

            <tbody>
                <% @activities.each do |activity| %>
                <tr>
                    <td><%= activity.name %></td>
                    <td>
                        <% activity.trainees.each do |trainee| %>
                        <%= trainee.first + ' ' + trainee.last + ' | ' %>
                        <% end %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>

    </div>
</div>