<p id="notice"><%= notice %></p>

<div class="basic-container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel-body">
                <table class="table table-hover table-bordered" style="background-color: white;">
                    <thead class="thead-dark">
                        <tr>
                            <th class="text-center">First Name</th>
                            <th class="text-center">Last Name</th>
                            <th class="text-center">Speciality</th>
                            <th colspan="3"></th>
                        </tr>
                    </thead>

                    <tbody>
                        <% @all_instructors.each do |instructor| %>
                        <tr>
                            <td><%= instructor.first %></td>
                            <td><%= instructor.last %></td>
                            <td><%= instructor.speciality %></td>

                            <td><%= link_to 'Show', instructor %></td>
                            <td><%= link_to 'Edit', edit_instructor_path(resource: instructor) %></td>
                            <td><%= link_to 'Destroy', registration_path(instructor), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<br>