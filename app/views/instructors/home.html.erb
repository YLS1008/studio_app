<% provide(:title, "Instructor Profile") %>
<div class="basic-container first-container">
    <div class="row">
        <aside class="col-md-3">
            <div style="background-color: transparent; display: block; text-align: center; margin-top: 5px;">

                <%= image_tag @instructor.displayed_image,
                     loading: "lazy", alt: @instructor.first, class: "rounded-full", style: "border-radius: 10%" %>
            </div>
            <section class="name">
                <%= @instructor.first.capitalize %> <%= @instructor.last.capitalize %>
            </section>
        </aside>
        <div class="col-md-8">
            <div class="profile-stats">
                <% if @instructor.activity.exists? %>
                <%= image_tag @instructor.activity.first.displayed_image,
                     loading: "lazy", alt: @instructor.activity.first.name, class: "img-circle img-fluid" %>
                <% end %>
                <ul class="no-bullets">
                    <h4>
                        <li class="menu-item"> <strong><%= @instructor.speciality %></strong> </li>
                    </h4>
                </ul>
                <h4>
                    <strong> שיעורים בשבועיים הקרובים</strong>
                </h4>
                <div class="table-responsive" style="direction: rtl;">
                    <table class="table table-hover table-bordered" style="background-color: white;">
                        <thead class="thead-dark" style="color: black;">
                            <tr>
                                <th class="text-center">שיעור </th>
                                <th class="text-center">תאריך </th>
                                <th class="text-center">יום </th>
                                <th class="text-center">שעה </th>
                            </tr>
                        </thead>

                        <tbody style="color: black;">
                            <% @instructor_time_slots.each do |slot| %>
                            <tr>
                                <td><%= slot.mother.name %></td>
                                <td><%= slot.start_time.to_date %></td>
                                <td><%= daynum_to_hebrew_day(slot.start_time.wday) %></td>
                                <td><%= slot.get_clean_datetime(:time) %></td>

                            </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>


            <div class="profile-stats">
                <%= simple_format(@instructor.description) %>

                <div class="btn btn-main" style="display: block;">
                    <% if admin_signed_in? %>
                    <%= link_to "הוסף פעילות", new_activity_path(id: @instructor.id) %>
                    <% else %>
                    <%= link_to "חזרה לעמוד הבית", root_path %>
                    <% end %>
                </div>
            </div>
        </div>



    </div>
</div>