<div class="actions">
    <% actions_helper(resource).each do |action| %>
        <% if action.class==Array %>
            <div class="btn-group">
                <button type="button" class="btn btn-primary btn-m sqs-block-button-element dropdown-toggle"
                    data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-plus"></i>
                    <%= action[0] %>
                </button>
                <ul class="dropdown-menu">
                    <% action.each_with_index do |a, index| %>
                        <% next if index==0 %>
                            <li>
                                <%= a %>
                            </li>
                            <% end %>
                </ul>
            </div>


            <% else %>
                <%= action %>
                    <% end %>
                        <% end %>
</div>